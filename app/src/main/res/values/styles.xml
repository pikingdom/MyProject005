<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    

    <style name="CustomWindowTitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff948DF0</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="PerferencesCustomWindowTitleBackground">
        <item name="android:background">@drawable/common_title_bg</item>
    </style>
    
        <style name="SharedAnimation">
        <item name="android:windowEnterAnimation">@anim/shared_fade_in</item>
        <item name="android:windowExitAnimation">@anim/shared_fade_out</item>
    </style>

    <style name="progress_horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/common_progressbar_horizontal</item>
    </style>

</resources>