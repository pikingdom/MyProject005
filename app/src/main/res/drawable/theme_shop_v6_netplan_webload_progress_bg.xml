<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />

            <solid
                android:angle="270"
                android:centerColor="#a0b1c1"
                android:centerY="0.75"
                android:endColor="#a0b1c1"
                android:startColor="#a0b1c1" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#81daff"
                    android:centerY="0.75"
                    android:endColor="#81daff"
                    android:startColor="#81daff" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#81daff"
                    android:centerY="0.75"
                    android:endColor="#81daff"
                    android:startColor="#81daff" />
            </shape>
        </clip>
    </item>

</layer-list>