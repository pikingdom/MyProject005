<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="#fff4f4f4"
              android:paddingTop="3dp"
              android:paddingBottom="4dp"
              android:orientation="vertical">

    <!-- banner新闻条-->
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#ffffff"
            android:id="@+id/zakernews"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_gravity="center_horizontal">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageViewZaker"
                android:scaleType="centerCrop"
                android:layout_gravity="left|center_vertical"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Jolla授权的Aqua手机低调"
                android:id="@+id/titleZaker"
                android:layout_marginBottom="4dp"
                android:background="#55000000"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="17dp"
                android:paddingRight="10dp"
                android:textColor="#ffffffff"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_horizontal|bottom"/>

    </FrameLayout>
    <!-- 小图新闻条-->
    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:id="@+id/wyNews"
            android:paddingBottom="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:layout_height="105dp">

        <ImageView
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:id="@+id/imageViewWY"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                />

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:layout_gravity="center_horizontal"
                android:paddingRight="10dp"
                android:layout_toLeftOf="@+id/imageViewWY">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="标题"
                    android:id="@+id/titleWY"
                    android:maxLines="2"
                    android:textSize="15sp"
                    android:textColor="#1c1c1c"
                    android:gravity="left"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal|bottom"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="内容"
                    android:id="@+id/newsdescWy"
                    android:maxLines="2"
                    android:textSize="12sp"
                    android:textColor="#ff999999"
                    android:gravity="left"
                    android:layout_below="@+id/titleWY"
                    android:layout_gravity="center_horizontal|bottom"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015"
                    android:maxLines="1"
                    android:id="@+id/publicTime"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:layout_alignParentBottom="true"
                    android:textColor="#ffb3b3b3"/>
        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:id="@+id/bannerAD"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
        <RelativeLayout android:layout_width="match_parent"
                      android:layout_height="36dp"
                      android:paddingRight="10dp"
                android:paddingLeft="10dp">
            <ImageView android:layout_width="wrap_content"
                       android:id="@+id/lineSeparator"
                       android:layout_alignParentLeft="true"
                       android:layout_height="wrap_content"
                       android:src="@drawable/theme_shop_v6_tagtip_more_red"
                       android:layout_gravity="center_vertical"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingLeft="2dp"
                      android:paddingRight="10dp"
                      android:id="@+id/bannerADTitle"
                      android:layout_centerVertical="true"
                      android:layout_toRightOf="@+id/lineSeparator"
                      android:text="标题"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:paddingRight="2dp"
                      android:paddingLeft="2dp"
                      android:background="@drawable/ad_text_bg"
                    android:text="广告"/>
        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:id="@+id/bannerADImage"
                android:scaleType="centerCrop"
                android:layout_gravity="left|center_vertical"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="描述"
                android:id="@+id/bannerADDesc"
                android:layout_marginBottom="2dp"
                android:background="#ffffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:paddingRight="10dp"
                android:textColor="#ff999999"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_horizontal|bottom"/>

    </LinearLayout>

</LinearLayout>