<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical">

    <com.nd.hilauncherdev.plugin.navigation.widget.PullToRefreshListView
        android:id="@+id/tao_bao_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:listSelector="@drawable/transparent_background"
        android:scrollbarThumbVertical="@drawable/list_view_scroll_bar_thumb" />


    <!-- 置顶按钮-->
    <ImageView
        android:id="@+id/taobao_gototop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/news_gototop"
        android:visibility="invisible" />

</RelativeLayout>