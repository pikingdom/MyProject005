<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/navi_card_content_bg"
    android:paddingBottom="8dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp">

    <RelativeLayout
        android:id="@+id/refresh_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp">

        <ImageView
            android:id="@+id/refresh_progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/market_search_guess_refresh" />

        <TextView
            android:id="@+id/refresh_bar_refresh_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/refresh_progress"
            android:text="一小时前刷新"
            android:textColor="@drawable/card_item_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card_add_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/navi_add_card_in_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="添加卡片"
            android:textColor="@drawable/card_item_text" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/navi_add_card_in_top"
            android:src="@drawable/navigation_add_card_btn" />
    </RelativeLayout>


</RelativeLayout>