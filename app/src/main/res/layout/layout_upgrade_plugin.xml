<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/navi_plugin_update"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageView
            android:id = "@+id/upgrade_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/navi_plugin_notify" />


        <LinearLayout
            android:id = "@+id/upgrad_op_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/navi_download_v"
                android:layout_gravity="center_vertical|right"
                android:layout_width="@dimen/navi_download_ic_dimen"
                android:layout_height="@dimen/navi_download_ic_dimen"
                android:src="@drawable/navi_download_normal_black" />

            <ImageView
                android:id="@+id/navi_pause_v"
                android:layout_gravity="center_vertical|right"
                android:layout_width="@dimen/navi_download_ic_dimen"
                android:layout_height="@dimen/navi_download_ic_dimen"
                android:src="@drawable/nav_pause_black" />

            <ImageView
                android:id="@+id/navi_cancel_v"
                android:layout_gravity="center_vertical|right"
                android:layout_width="@dimen/navi_download_ic_dimen"
                android:layout_height="@dimen/navi_download_ic_dimen"
                android:src="@drawable/navi_calcle_black" />
        </LinearLayout>

        <TextView
            android:id="@+id/navi_plugin_update_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:text="快速搜索屏有更新啦，点击次数升级！"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/upgrade_icon"
            android:layout_toLeftOf="@id/upgrad_op_icon_layout"
            android:textColor="#181818"
            android:textSize="14sp" />


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#eef1f6" />

</LinearLayout>