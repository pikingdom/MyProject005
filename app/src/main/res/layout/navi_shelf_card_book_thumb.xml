<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.nd.hilauncherdev.plugin.navigation.widget.book.ScaleImageView
        android:id="@+id/iv_bookshelf_item_thumb_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:ratio="0.7481" />


    <TextView
        android:id="@+id/iv_bookshelf_thumb_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:text="— TXT —"
        android:textColor="#9D9278"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/iv_bookshelf_thumb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="4"
        android:text=""
        android:textColor="#9D9278"
        android:textSize="12sp" />


</RelativeLayout>