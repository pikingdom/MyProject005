<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/market_common_wrap"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical"
                android:background="@drawable/theme_shop_v6_bottomtool_app_list_bg">

    <include layout="@layout/preference_activity_title"
        android:id = "@+id/header_view_layout"/>

    <com.nd.hilauncherdev.plugin.navigation.widget.MyPhoneViewPagerTab
        android:id="@+id/container_pagertab"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/header_view_layout"/>

    <com.nd.hilauncherdev.plugin.navigation.widget.MyPhoneViewPager
        android:id="@+id/container_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f4f4f4"
        android:layout_below="@id/container_pagertab"/>

</RelativeLayout>