<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id = "@+id/funny_big_item"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:id = "@+id/funny_big_img"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#7f000000"
            android:layout_gravity="bottom"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="养多肉，你会浇水吗"
                android:id = "@+id/funny_big_title"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/navi_card_item_text"/>
        </LinearLayout>

    </FrameLayout>

    <include layout="@layout/navi_funny_card_item"
        android:id = "@+id/funny_small_item1"/>

    <include layout="@layout/navi_funny_card_item"
        android:id = "@+id/funny_small_item2"/>

</LinearLayout>