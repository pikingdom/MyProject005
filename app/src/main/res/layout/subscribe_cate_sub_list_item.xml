<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:id = "@+id/subscribe_site_icon_img"
            android:layout_centerVertical="true"/>

        <TextView
            android:id = "@+id/subscribe_site_add_btn"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:text="订阅"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="12sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            android:background="@drawable/subscribe_card_has_sub_btn_sel"/>

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/subscribe_site_add_btn"
            android:layout_toRightOf="@id/subscribe_site_icon_img">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搞笑集中营"
                android:id="@+id/subscribe_site_title_text"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="#1c1c1c"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000人订阅"
                android:id = "@+id/subscribe_site_count_text"
                android:textSize="11sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#999999"
                android:layout_marginTop="14dp"/>
            
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>