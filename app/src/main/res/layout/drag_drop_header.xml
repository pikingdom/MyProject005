<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_rootLayout"
    android:layout_width="fill_parent"
    android:layout_height="80dp" >

    <RelativeLayout
        android:id="@+id/head_contentLayout"
        android:layout_width="fill_parent"
        android:layout_height="80dp" >

        <ImageView
            android:id="@+id/super_man_tail"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="40dp"
            android:src="@drawable/super_man_tail" />

        <ImageView
            android:id="@+id/super_man_cloth"
            android:layout_width="95dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:paddingLeft="25dp"
            android:paddingRight="5dp"
            android:paddingTop="20dp"
            android:src="@drawable/super_man_cloth" />

        <ImageView
            android:id="@+id/super_man_body"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/super_man_body" />

        <TextView
            android:id="@+id/lastUpdateTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/super_man_body"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:layout_marginTop="5dp"
            android:text="很久前刷新"
            android:textColor="@drawable/card_base_text"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>