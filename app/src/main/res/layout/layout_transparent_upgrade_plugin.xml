<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/navi_plugin_update"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/navi_card_content_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/upgrade_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/navi_plugin_notify" />


        <LinearLayout
            android:id="@+id/upgrad_op_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/navi_download_v"
                android:layout_width="@dimen/navi_download_ic_dimen"
                android:layout_height="@dimen/navi_download_ic_dimen"
                android:layout_gravity="center_vertical|right"
                android:padding="@dimen/navi_download_ic_padding"
                android:src="@drawable/navi_download_normal" />

            <ImageView
                android:id="@+id/navi_pause_v"
                android:layout_width="@dimen/navi_download_ic_dimen"
                android:layout_height="@dimen/navi_download_ic_dimen"
                android:layout_gravity="center_vertical|right"
                android:padding="@dimen/navi_download_ic_padding"
                android:src="@drawable/navi_pause_normal" />

            <ImageView
                android:id="@+id/navi_cancel_v"
                android:layout_width="@dimen/navi_download_ic_dimen"
                android:layout_height="@dimen/navi_download_ic_dimen"
                android:layout_gravity="center_vertical|right"
                android:padding="@dimen/navi_download_ic_padding"
                android:src="@drawable/navi_cancel_normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/navi_plugin_update_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/upgrad_op_icon_layout"
            android:layout_toRightOf="@id/upgrade_icon"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/navigation_upgrade_tips"
            android:textColor="#ffffff"
            android:textSize="14sp" />


    </RelativeLayout>

</LinearLayout>