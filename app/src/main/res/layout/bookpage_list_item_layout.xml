<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff4f4f4"
    android:orientation="vertical">

    <!-- 小图新闻条-->
    <RelativeLayout
        android:id="@+id/bookpage_list_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <com.nd.hilauncherdev.plugin.navigation.widget.book.ScaleImageView
            android:id="@+id/iv_bookpage_list_item_thumb"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#ffffff"
            android:scaleType="centerCrop"
            app:ratio="0.7481" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_toRightOf="@+id/iv_bookpage_list_item_thumb"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_bookpage_list_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal|bottom"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:text="标题"
                android:textColor="#181818"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_bookpage_list_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bookpage_list_item_title"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="left"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:text="内容"
                android:textColor="#ff999999"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_bookpage_list_item_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_bookpage_list_item_thumb"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:text="2015"
            android:textColor="#ff999999"
            android:textSize="12sp" />

    </RelativeLayout>


</LinearLayout>