<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <ImageView
            android:layout_width="102dp"
            android:layout_height="76dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:id = "@+id/funny_small_icon"
            android:layout_centerVertical="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/funny_small_icon">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吃货少女的日常"
                android:id="@+id/funny_small_title"
                android:singleLine="true"
                android:textColor="@drawable/card_item_text"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="吃货的一天都是酱紫度过的"
                android:id = "@+id/funny_small_desc"
                android:textColor="@color/funny_card_item_text"
                android:textSize="12sp"
                android:singleLine="true"
                android:layout_marginTop="10dp"/>
        </LinearLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/funny_item_loading_layout"
        android:visibility="gone">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:id = "@+id/funny_small_icon_default"/>
    </RelativeLayout>

</LinearLayout>