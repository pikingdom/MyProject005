<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/subscribe_from_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text="添加订阅，开启个性化阅读"
        android:textColor="@drawable/funny_card_item_text"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <include
            android:id="@+id/navi_subscribe_recommend_item1"
            layout="@layout/navi_subscribe_empty_data_item"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>

        <include
            android:id="@+id/navi_subscribe_recommend_item2"
            layout="@layout/navi_subscribe_empty_data_item"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>

        <include
            android:id="@+id/navi_subscribe_recommend_item3"
            layout="@layout/navi_subscribe_empty_data_item"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>