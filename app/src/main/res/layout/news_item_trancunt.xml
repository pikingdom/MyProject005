<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- banner新闻条-->
    <FrameLayout
        android:id="@+id/zakernews"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/navi_card_content_bg"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageViewZaker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/titleZaker"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#55000000"
            android:gravity="left|center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="10dp"
            android:text="Jolla授权的Aqua手机低调"
            android:textColor="#ffffffff" />

    </FrameLayout>

    <!-- 小图新闻条-->
    <RelativeLayout
        android:id="@+id/wyNews"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/navi_card_content_bg"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageViewWY"
            android:layout_width="102dp"
            android:layout_height="76.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_gravity="center_horizontal"
            android:layout_toLeftOf="@+id/imageViewWY"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/titleWY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="left"
                android:maxLines="2"
                android:text="标题"
                android:textColor="@drawable/card_item_text"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/newsdescWy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleWY"
                android:layout_gravity="center_horizontal|bottom"
                android:gravity="left"
                android:maxLines="2"
                android:text="内容"
                android:textColor="@color/notify_skip_color_title"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/publicTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:maxLines="1"
                android:text="2015"
                android:textColor="@color/navi_card_more_text"
                android:textSize="9sp" />


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bannerAD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/navi_card_content_bg"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:id ="@+id/title_stub"
                android:src="@drawable/theme_shop_v6_tagtip_more_red" />

            <TextView
                android:id="@+id/bannerADTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:paddingRight="10dp"
                android:layout_toRightOf="@id/title_stub"
                android:text="标题"
                android:paddingLeft="2dp"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:id = "@+id/ad_recommend"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="100dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/bg_ad"
                android:layout_centerVertical="true"
                android:text="广告" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/bannerADImage"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/bannerADDesc"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left|center_vertical"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="描述"
            android:textColor="#ffffff" />


    </LinearLayout>

</LinearLayout>