<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.nd.hilauncherdev.plugin.navigation.widget.book.BookThumbLayout
        android:id="@+id/iv_bookshelf_item_thumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />


    <ImageView
        android:id="@+id/iv_bookshelf_item_recommend_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/top_style_recommend" />

    <TextView
        android:id="@+id/tv_bookshelf_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_bookshelf_item_thumb"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:gravity="center_horizontal|top"
        android:maxLines="1"
        android:paddingBottom="15dp"
        android:textColor="#181818"
        android:textSize="12sp" />
</RelativeLayout>