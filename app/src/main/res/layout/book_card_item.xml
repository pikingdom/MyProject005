<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_item_bg_sel"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/book_item_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/book_item_ic"
            android:layout_width="60dp"
            android:layout_height="74dp"
            android:layout_marginLeft="10dp"
            android:background="#f8f8f8"
            android:padding="1dp"
            android:src="@drawable/jrtt_new_big_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/book_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="央企重组刺激股价暴涨 布局七大投资主线"
                android:textColor="@drawable/card_item_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/book_item_chapter_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="央企重组刺激股价暴涨 布局七大投资主线"
                android:textColor="@drawable/card_item_sub_text"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>