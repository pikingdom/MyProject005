<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/book_item_all"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/book_item_ic"
            android:layout_width="60dp"
            android:layout_height="73dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:background="#ffffff"
            android:padding="1dp"
            android:src="@drawable/jrtt_new_big_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/book_item_del"
            android:layout_toRightOf="@+id/book_item_ic"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/book_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="央企重组刺激股价暴涨 布局七大投资主线"
                android:textColor="@drawable/list_item_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/book_item_chapter_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="央企重组刺激股价暴涨 布局七大投资主线"
                android:textColor="@drawable/card_item_sub_text"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/book_item_del"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/book_edit_delete_sel"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:textColor="@drawable/list_item_text"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#d4d4d4" />

</LinearLayout>