<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layout_shelf_title_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/lineSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/theme_shop_v6_tagtip_more_cyan" />

        <TextView
            android:id="@+id/bannerADTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lineSeparator"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:text="我的书架"
            android:textColor="#181818"
            android:textSize="16sp" />

        <TextView
            android:id = "@+id/tv_bookpage_shelf_layout_open"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="打开书架"
            android:textColor="#999999"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_shelf_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_shelf_title_layout"
        android:orientation="horizontal"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"></LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/layout_shelf_item"
        android:background="#eef1f6" />

</RelativeLayout>